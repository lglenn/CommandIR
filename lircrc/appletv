# LIRC RC file for AppleTV 

# Inspired by CommandIR's "HOWTO: Make Any Remote Better than a Harmony"
# http://www.commandir.com/content/view/51/73/

begin
 prog = irexec
 remote = hauppauge_350
 button = Play
 repeat = 0
 config = commandir_send -e3 /home/larry/ir_codes/appletv_play
end

begin
 prog = irexec
 remote = hauppauge_350
 button = Menu/i
 repeat = 0
 config = commandir_send -e3 /home/larry/ir_codes/appletv_menu
end

begin
 prog = irexec
 remote = hauppauge_350
 button = OK
 repeat = 0
 config = commandir_send -e3 /home/larry/ir_codes/appletv_ok
end

begin
 prog = irexec
 remote = hauppauge_350
 button = Up
 repeat = 0
 config = commandir_send -e3 /home/larry/ir_codes/appletv_up
end

begin
 prog = irexec
 remote = hauppauge_350
 button = Down
 repeat = 0
 config = commandir_send -e3 /home/larry/ir_codes/appletv_down
end

begin
 prog = irexec
 remote = hauppauge_350
 button = Left
 repeat = 0
 config = commandir_send -e3 /home/larry/ir_codes/appletv_left
end

begin
 prog = irexec
 remote = hauppauge_350
 button = Right
 repeat = 0
 config = commandir_send -e3 /home/larry/ir_codes/appletv_right
end

# Get back to the main menu
begin
 prog = irexec
 remote = hauppauge_350
 button = Back/Exit
 repeat = 0
 config = /usr/local/bin/from_appletv.sh
end
